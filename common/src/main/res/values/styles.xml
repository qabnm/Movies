<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorPrimary">@color/colorF2F2F2</item>
        <item name="colorPrimaryDark">@color/colorF2F2F2</item>
        <item name="colorAccent">@color/color999999</item>
    </style>

    <style name="commonText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/color212121</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="centerLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/dp_12</item>
        <item name="android:paddingRight">@dimen/dp_12</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/white_click_background</item>
    </style>

    <style name="StyleShapeAppearanceImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>