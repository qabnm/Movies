<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFFFFFF">

    <ImageView
        android:id="@+id/imgSearch"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_2"
        android:padding="@dimen/dp_10"
        android:src="@drawable/movie_search"
        app:layout_constraintBottom_toBottomOf="@+id/tvMovie"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMovie" />

    <TextView
        android:id="@+id/tvMovie"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_44"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="片库"
        android:textColor="@color/color000000"
        android:textSize="@dimen/sp_20"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvRank"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRank"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_44"
        android:gravity="center"
        android:text="榜单"
        android:textColor="@color/color666666"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toRightOf="@+id/tvMovie"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>