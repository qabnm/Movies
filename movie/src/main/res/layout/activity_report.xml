<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFFFFFF"
    android:orientation="vertical">

    <com.duoduovv.common.view.TopBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:contentTitle="举报" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/colorE5E5E5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_20"
        android:includeFontPadding="false"
        android:text="举报理由"
        android:textColor="@color/color262828"
        android:textSize="@dimen/sp_15" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <RadioButton
            android:id="@+id/btnSeQing"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@drawable/selector_report_button"
            android:button="@null"
            android:gravity="center"
            android:text="色情"
            android:textColor="@color/color999999"
            android:textSize="@dimen/sp_14" />

        <RadioButton
            android:id="@+id/btnBaoLi"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@drawable/selector_report_button"
            android:button="@null"
            android:gravity="center"
            android:text="暴力"
            android:textColor="@color/color999999"
            android:textSize="@dimen/sp_14" />

        <RadioButton
            android:id="@+id/btnQinQuan"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@drawable/selector_report_button"
            android:button="@null"
            android:gravity="center"
            android:text="侵权"
            android:textColor="@color/color999999"
            android:textSize="@dimen/sp_14" />

        <RadioButton
            android:id="@+id/btnOther"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_weight="1"
            android:background="@drawable/selector_report_button"
            android:button="@null"
            android:gravity="center"
            android:text="其它"
            android:textColor="@color/color999999"
            android:textSize="@dimen/sp_14" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@color/colorE5E5E5" />

    <EditText
        android:id="@+id/etContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="top"
        android:hint="请输入您要举报的具体内容"
        android:lineSpacingMultiplier="1.2"
        android:padding="@dimen/dp_12"
        android:textColor="@color/color262828"
        android:textSize="@dimen/sp_14" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCommit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_15"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="提交"
        android:textColor="@color/colorFFFFFF"
        android:textSize="@dimen/sp_18"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        app:backgroundTint="@color/color0083FF"
        app:cornerRadius="@dimen/dp_4" />
</LinearLayout>