<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_15"
    tools:viewBindingIgnore="true">

    <com.duoduovv.common.view.MediumBoldTextView
        android:id="@+id/tvEpisodes"
        android:layout_width="0px"
        android:layout_height="0px"
        android:background="@drawable/shape_radius28_solid_f3f4f8"
        android:gravity="center"
        android:textColor="@color/color000000"
        android:textSize="@dimen/sp_16"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vLine"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <View
        android:id="@+id/vLine"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvEpisodes" />

</androidx.constraintlayout.widget.ConstraintLayout>