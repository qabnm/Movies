<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFFFFFF"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgCover"
        android:layout_width="@dimen/dp_105"
        android:layout_height="@dimen/dp_146"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/StyleShapeRounder3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorBFBFBF" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lines="1"
        android:textColor="@color/color333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toRightOf="@+id/imgCover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgCover"
        tools:text="叶问4：完结篇" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lines="1"
        android:textColor="@color/color666666"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@+id/tvTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="2019  电视剧  日本  日语" />

    <TextView
        android:id="@+id/tvDirector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lines="1"
        android:textColor="@color/color666666"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@+id/tvTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTime"
        tools:text="导演：陈昆晖" />

    <TextView
        android:id="@+id/tvPlay"
        android:layout_width="@dimen/dp_92"
        android:layout_height="@dimen/dp_34"
        android:background="@drawable/shape_radius3_solid_567ce7"
        android:gravity="center"
        android:text="立即播放"
        android:textColor="@color/colorFFFFFF"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@+id/imgCover"
        app:layout_constraintLeft_toLeftOf="@+id/tvTitle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/imgCover">

        <TextView
            android:id="@+id/tv1"
            style="@style/searchResultText"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv2"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/tv2"
            style="@style/searchResultText"
            app:layout_constraintLeft_toRightOf="@+id/tv1"
            app:layout_constraintRight_toLeftOf="@+id/tv3"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2" />

        <TextView
            android:id="@+id/tv3"
            style="@style/searchResultText"
            app:layout_constraintLeft_toRightOf="@+id/tv2"
            app:layout_constraintRight_toLeftOf="@+id/tv4"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="..." />

        <TextView
            android:id="@+id/tv4"
            style="@style/searchResultText"
            app:layout_constraintLeft_toRightOf="@+id/tv3"
            app:layout_constraintRight_toLeftOf="@+id/tv5"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="4" />

        <TextView
            android:id="@+id/tv5"
            style="@style/searchResultText"
            app:layout_constraintLeft_toRightOf="@+id/tv4"
            app:layout_constraintRight_toLeftOf="@+id/tv6"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="5" />

        <TextView
            android:id="@+id/tv6"
            style="@style/searchResultText"
            app:layout_constraintLeft_toRightOf="@+id/tv5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@id/layoutTotal" />
</androidx.constraintlayout.widget.ConstraintLayout>