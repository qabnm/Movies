<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/layoutProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:max="100"
        android:progressDrawable="@drawable/progress_drawable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStart"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_raidus10_solid_ff0000"
            android:gravity="center"
            android:text="开始下载"
            android:textColor="@color/colorFFFFFF"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tvPause"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_radius3_solid_567ce7"
            android:gravity="center"
            android:text="暂停下载"
            android:textColor="@color/colorFFFFFF"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tvClear"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_radius18_solid_0086ff"
            android:gravity="center"
            android:text="清除任务"
            android:textColor="@color/colorFFFFFF"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color4D4D4D" />
</LinearLayout>