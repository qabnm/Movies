<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFFFFFF">

    <com.duoduovv.common.view.TopBarLayout
        android:id="@+id/layoutTopBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:contentTitle="联系客服"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etSuggest"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@null"
        android:gravity="top"
        android:hint="请输入您的意见"
        android:padding="@dimen/dp_12"
        android:textColor="@color/color212121"
        android:textColorHint="@color/color999999"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutTopBar" />

    <TextView
        android:id="@+id/tvNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_14"
        android:text="0/300"
        android:textColor="@color/color999999"
        android:textSize="@dimen/sp_15"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSuggest" />

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@color/colorE0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/tvNum" />

    <TextView
        android:id="@+id/tvContract"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_52"
        android:gravity="center_vertical"
        android:text="联系方式："
        android:textColor="@color/color212121"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="@+id/vLine"
        app:layout_constraintTop_toBottomOf="@+id/vLine" />

    <EditText
        android:id="@+id/etContract"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_52"
        android:background="@null"
        android:hint="QQ，微信或者邮箱"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/color212121"
        android:textColorHint="@color/color999999"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@+id/tvContract"
        app:layout_constraintLeft_toRightOf="@+id/tvContract"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvContract" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorF2F2F2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContract" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCommit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_15"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="提交"
        android:textColor="@color/colorFFFFFF"
        android:textSize="@dimen/sp_18"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        app:backgroundTint="@color/color0083FF"
        app:cornerRadius="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>