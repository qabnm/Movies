<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFFFFFF">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageIcon"
        android:layout_width="@dimen/dp_68"
        android:layout_height="@dimen/dp_68"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_44"
        android:scaleType="centerCrop"
        android:src="@drawable/center_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/StyleShapeAppearanceImage" />

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="用户12090813"
        android:gravity="center_vertical"
        android:textColor="@color/color333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/imageIcon"
        app:layout_constraintLeft_toRightOf="@+id/imageIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageIcon" />

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_27"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageIcon">

        <LinearLayout
            android:id="@+id/layoutIsRes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/vDivider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/colorF2F2F2" />

            <LinearLayout
                android:id="@+id/layoutHistory"
                style="@style/centerIconLinear">

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/person_history" />

                <TextView
                    android:id="@+id/tvHistory"
                    style="@style/centerIconText"
                    android:text="观看历史" />

                <ImageView style="@style/centerMoreInfo" />
            </LinearLayout>

            <View style="@style/centerIconLine" />

            <LinearLayout
                android:id="@+id/layoutDownload"
                style="@style/centerIconLinear">

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/person_download" />

                <TextView
                    style="@style/centerIconText"
                    android:text="我的下载" />

                <ImageView style="@style/centerMoreInfo" />
            </LinearLayout>

            <View style="@style/centerIconLine" />

            <LinearLayout
                android:id="@+id/layoutCollection"
                style="@style/centerIconLinear">

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/person_collection" />

                <TextView
                    style="@style/centerIconText"
                    android:text="我的收藏" />

                <ImageView style="@style/centerMoreInfo" />
            </LinearLayout>

            <View style="@style/centerIconLine" />

            <LinearLayout
                android:id="@+id/layoutShare"
                style="@style/centerIconLinear">

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/person_share" />

                <TextView
                    style="@style/centerIconText"
                    android:text="推荐好友" />

                <ImageView style="@style/centerMoreInfo" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/colorF2F2F2" />


        <LinearLayout
            android:id="@+id/layoutContract"
            style="@style/centerIconLinear">

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/person_contract" />

            <TextView
                style="@style/centerIconText"
                android:text="问题反馈" />

            <ImageView style="@style/centerMoreInfo" />
        </LinearLayout>

        <View style="@style/centerIconLine" />

        <LinearLayout
            android:id="@+id/layoutSetting"
            style="@style/centerIconLinear">

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/person_setting" />

            <TextView
                style="@style/centerIconText"
                android:text="系统设置" />

            <ImageView style="@style/centerMoreInfo" />
        </LinearLayout>

        <View style="@style/centerIconLine" />

        <LinearLayout
            android:id="@+id/layoutAbout"
            style="@style/centerIconLinear">

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/person_contract" />

            <TextView
                style="@style/centerIconText"
                android:text="关于我们" />

            <ImageView style="@style/centerMoreInfo" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorF2F2F2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutContent" />
</androidx.constraintlayout.widget.ConstraintLayout>